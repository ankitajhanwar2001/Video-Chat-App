<%- include("partials/header") %>

<link rel="stylesheet" href="index_style.css">


<div class="container">
    <br/>
    <b id="login-name"><center>Login Here</center> </b>
    <div class="row">
        <div class="col-md-6 col-md-offset-3" id="login">
            <form action="/login" method="POST">
                <div class="form-group">
                    <label class="user"> UserName  </label>
                    <div class="input-group">
                        <span class="input-group-addon" id="iconn"> <i class="glyphicon glyphicon-user"></i></span>
                        <input type="text" class="form-control" name="username" placeholder="username">
                    </div>
                </div>

                <div class="form-group">
                    <label class="user"> Password </label>
                    <div class="input-group">
                        <span class="input-group-addon" id="iconn1"> <i class="glyphicon glyphicon-lock"></i></span>
                        <input type="password" class="form-control" name="password" placeholder="Enter Password">
                    </div>
                </div>

                <br/>
                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="login">
                    <input type="reset" class="btn btn-danger" value="reset">
                </div>
                <br/>
                <br/>
                <br/>
                <br/>
                <p>Don't have an account?
                <a href="/register" style="color: white;"> Register </a></p>
            </form>
        </div>
	</div>
</div>

<%- include("partials/footer") %>
